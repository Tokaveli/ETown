@model IEnumerable<Emiasto.Models.FacilityImage>

@{
    ViewBag.Title = "Facility images";
}

<h2>Facility images</h2>

@if (Context.User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Facility)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Images/@item.Image" height="100">
        </td>
        <td>
            @Html.ActionLink(item.Facility.Name, "Details", "Facilities", new { id = item.Facility.Id }, null)
        </td>
        <td>
            @if (Context.User.IsInRole("Admin")) { @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @Html.Raw(" | ") }
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @if (Context.User.IsInRole("Admin")) { @Html.Raw(" | ") @Html.ActionLink("Delete", "Delete", new { id = item.Id }) }
        </td>
    </tr>
}

</table>
