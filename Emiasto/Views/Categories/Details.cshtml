@model Emiasto.Models.Category

@{
    ViewBag.Title = Model.Name;
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Parent)
        </dt>

        <dd>
            @if (Model.Parent != null)
            {
                @Html.ActionLink(Model.Parent.Name, "Details", "Categories", new { id = Model.Parent.Id }, null)
            }
        </dd>

        @if (Model.Facilities.Any())
        {
            <dt>
                @Html.DisplayNameFor(model => model.Facilities)
            </dt>

            <dd>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Facilities.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Facilities.FirstOrDefault().Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Facilities.FirstOrDefault().Website)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Facilities.FirstOrDefault().Phone)
                        </th>
                    </tr>

                    @foreach (var facility in Model.Facilities)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(facility.Name, "Details", "Facilities", new { id = facility.Id }, null)
                            </td>
                            <td>
                                @Html.DisplayFor(model => facility.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(model => facility.Website)
                            </td>
                            <td>
                                @Html.DisplayFor(model => facility.Phone)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
